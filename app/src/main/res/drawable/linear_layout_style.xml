<?xml version="1.0" encoding="utf-8"?>
<!--线性布局管理器，二维码存放区样式-->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--设置背景颜色-->
    <solid android:color="#FFFFFF" />
    <!--设置内边距-->
    <padding
        android:bottom="1dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0dp" />
    <!--设置圆角-->
    <corners android:radius="10dp" />
</shape>